{
  "family": "multi-agent-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::730335436231:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::730335436231:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "multi-agent-app",
      "image": "730335436231.dkr.ecr.eu-west-3.amazonaws.com/multi-agent-app",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8501,
          "protocol": "tcp",
          "name": "streamlit"
        },
        {
          "containerPort": 8000,
          "protocol": "tcp",
          "name": "fastapi"
        }
      ],
      "environment": [],
      "secrets": [
        {
          "name": "GOOGLE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:multi-agent/GOOGLE_API_KEY"
        },
        {
          "name": "COINGECKO_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:multi-agent/COINGECKO_API_KEY"
        },
        {
          "name": "ALPHA_VANTAGE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:multi-agent/ALPHA_VANTAGE_API_KEY"
        },
        {
          "name": "CHROMA_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:multi-agent/CHROMA_API_KEY"
        },
        {
          "name": "CHROMA_TENANT",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:multi-agent/CHROMA_TENANT"
        },
        {
          "name": "CHROMA_DATABASE",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:multi-agent/CHROMA_DATABASE"
        },
        {
          "name": "GOOGLE_APPLICATION_CREDENTIALS",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:multi-agent/GOOGLE_APPLICATION_CREDENTIALS"
        }

      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/multi-agent-app",
          "awslogs-region": "eu-west-3",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}